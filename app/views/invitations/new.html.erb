<h1>Invitation for <%= @scoreboard.name_of_scoreboard %></h1>
<div class="row">
    <div class= "col-md-4 col-md-offset-4">
    <%= form_for (@invitation) do |f|  %> 
    <%= hidden_field_tag :scoreboard_id, @scoreboard.id %>
    <% @invitations.each do |invite| %>
    <%= fields_for "invites[]", invite do |i| %>
    <%= i.label :email %>
    <%= i.text_field :recipient_email %>
    <% end %>
    <% end %>
 
    <%= f.submit "Send Invitation", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>



