<% provide(:title, "Plan Settings") %>
<h2 class="generic-header">
    <%= link_to home_path do %>
     <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>
   <% end %>
    Your Plan Settings
</h2>

<% if subscribed?(current_user) %>
      <%= link_to "Edit Card", edit_user_subscription_path, class: "btn btn-primary" %>
      <%= link_to "Cancel my account", user_subscription_path, data: { confirm: "Are you sure?" }, method: :delete %>
<% else %>
     <%= render 'notsubscribed' %>
<% end %>

<% if @charges.any? %>
   <%= render 'charges' %>
<% end %>

<%= current_user.stripe_subscription_id %>