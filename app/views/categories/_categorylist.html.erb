<% if @categories.any? %>
   <% @categories.each do |category|%>
        <div class="row category-div">
            <div class="col-xs-11 cat-info">
                <%= link_to scoreboard_category_path(@scoreboard, category) do %>
                    <div class="category-name">
                        <%= category.name %>
                    </div>
                <% end %>
                <div class="category-content">
                    Number of Documents in this Category:
                    <%= category.documents.count %>
                </div>
            </div>
            <% if manager_or_owner?(@scoreboard, current_user) %>
            <div class="col-xs-1 cat-settings">
                <div class="category-edit">
                <%= link_to edit_scoreboard_category_path(@scoreboard, category), remote: true do %>
                    <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
                <% end %>
                </div>
                <div class="category-del">
                <%= link_to scoreboard_category_path(@scoreboard, category), method: :delete, data: {confirm: "Are you sure you want to delete this category? This will also delete all of the documents it contains."} do %>
                    <i class="fa fa-trash-o fa-lg" aria-hidden="true"></i>
                <% end %>
                </div>
            </div>
            <% end %>
        </div>
   <% end %>
<% end %>

<div class="edit-category">
    <!--this div is where the modal for category name change is rendered. do not remove-->
</div>