<h2 class="generic-header">CREATE LEAGUE PAGE</h2>


<div class="row">
    <div class="col-xs-12 col-sm-6">
         <%= form_for(@scoreboard) do |f| %>
         
         <%= render 'shared/error_messages', object: f.object %>
         
         <div class="form-group">
             <%= f.label :Name_of_League_Page %>
             <%= f.text_field :name_of_scoreboard, maxlength: 80, class: "form-control"  %>
         </div>
         
         <div class="form-group">
             <%= f.label :Name_of_your_organization %>
             <%= f.text_field :name_of_organization, maxlength: 60, class: "form-control" %>
         </div>
         
         <div class="form-group">
              <%= f.label :Name_of_your_sport_or_activity %>
              <%= f.text_field :name_of_activity, maxlength: 60, class: "form-control" %>
         </div>
        
          <%= f.submit "Create", :data => {:disable_with => "Creating..."}, class: "btn btn-primary form-control" %>
         
         <% end %>
    </div>
</div>
          
      

      
     
      
     
      
      

       



  






  

  



