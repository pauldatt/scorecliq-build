<% @team_members.each do |member| %>
    <div class="row team-member-div" id="member_<%=member.id%>">
        <div class="col-sm-5 col-xs-8 team-member-name">
            <%= link_to member.name, user_path(member.id) %>
        </div>
        <div class="col-sm-1 col-xs-2 team-member-message">
            <%= link_to "#" do %>
               <i class="fa fa-envelope" aria-hidden="true"></i>
            <% end %> 
        </div>
        <div class="col-sm-1 col-xs-2 remove-team-member">
             <%= link_to(scoreboard_team_team_member_path(team_id: @team.id, user_id: member.id), method: :delete, data: {confirm: "Remove This Member?"}) do %>
               <i class="fa fa-times-circle" aria-hidden="true"></i> 
             <% end %>
        </div>
    </div>
<% end %>