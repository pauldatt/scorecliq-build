<div class="row message-div">
       <div class="col-xs-12 msg-info">
           <span class="msg-name">
               <%= link_to message.user.name, user_path(message.user) %> says:
           </span>
           <span class="pull-right">
               <%= message.created_at.strftime("%Y/%m/%d") %>
           </span>
       </div>
       <div class="col-xs-12 msg-body">
           <%= message.body %>
       </div>
</div>