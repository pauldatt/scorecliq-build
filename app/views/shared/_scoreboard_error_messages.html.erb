<% if @scoreboard.errors.any? %>
 <div id="error_explanation">
   <div class="alert alert-danger">
     The form contains <%= pluralize(@scoreboard.errors.count, "error") %>
   </div>
   <ul>
     <% @scoreboard.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
     <% end %>
   </ul>
 </div>
<% end %>