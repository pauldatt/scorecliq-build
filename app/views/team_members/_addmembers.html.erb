<% if @followers.any? %>  

        <% @followers.each do |follower| %>
            <div class="row member-follower-div" id="follower_<%=follower.id%>">
                <div class="col-xs-12 col-sm-8 member-prof-link">
                    <%= link_to follower.name, user_path(follower.id) %>
                
                    <%= link_to (add_scoreboard_team_team_member_path(@scoreboard, @team, follower)), method: :post, remote: true, :data => {:disable_with => ".."} do %>
                        <i class="fa fa-plus-square fa-lg pull-right" aria-hidden="true"></i>
                    <% end %>
                </div>
            </div>
        <% end %> 
        
        <div class="row">
            <div class="col-xs-12 col-sm-8 new-member-pages">
                <%= will_paginate @followers %>
            </div>
        </div>
        
<% else %>
    <div class="row">
      <div class="col-xs-12 col-sm-8">
        <h3>No members are available. </h3>
      </div>
    </div>
<% end %>
