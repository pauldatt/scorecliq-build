<% provide(:title, "Team Matches") %>
<h2 class="new-match-header">
   <%= link_to scoreboard_team_matches_path(@scoreboard) do %>
     <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>
   <% end %>
   CREATE TEAM MATCHES 
</h2>
<div class="row">
  <div class="col-xs-12 col-sm-6">
     <h4 class="match-success">Match has been added to Match List.</h4>
  </div>
</div>
<div class="row">
  <%= form_for [@scoreboard, @team_match], remote: true, html: {id: "new-match-entry"} do |f| %>
  <div class= "col-xs-12 col-sm-6  match-form">
    <div class="form-group">
      <%= f.label :Select_Match_Participants %>
      <%= f.collection_select :team_a_id, @teams, :id, :name, {prompt: "Select first team"}, {class: "form-control", id: "first-team-field"} %>
      <%= f.collection_select :team_b_id, @teams, :id, :name, {prompt: "Select second team"}, {class: "form-control"} %>
    </div>
    
    <div class="form-group">
      <%= f.label :Select_Date_of_Match %>
      <%= f.text_field :match_date, id: "datepicker", class: "form-control" %>
    </div>
    
    <h4 class="match-optional"> Optional Info</h4>
    
    <div class="form-group match-time-select">
      <%= f.label :Select_Time_of_Match %> <br>
      <%= f.time_select :match_time, {prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 5} %>
    </div>
    
    <div class="form-group">
      <%= f.label :Location_of_Match %>
      <%= f.text_field :location,maxlength: 40, class: "form-control" %>
    </div>
    
    <%= f.submit "Create", :data => {:disable_with => "Creating..."}, class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
    
<%= render 'shared/error_modal' %>
