  
    <h2>Log In</h2>
    <%= form_for(:session, url: login_path) do |f| %>
    
      <%= f.label :email, class: "form-block login-label" %>
      <%= f.text_field :email, class: "form-block form-block2", placeholder: "Enter email" %>
      
      <%= f.label :password, class: "login-label" %>
      <%= link_to "(forgot password?)", new_password_reset_path %>
      <%= f.password_field :password, class: "form-block form-block2", placeholder: "Enter password" %>
      
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <span class="login-label">Remember me</span>
      <% end %>
      
      <%= f.submit "Log in", class: "btn  form-block" %>
    <% end %>
