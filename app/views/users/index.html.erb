<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
  <li>
    <%= link_to user.name, user %>
    <% if current_user.admin? && !current_user?(user) %>
      | <%= link_to "Delete user", user, method: :delete,
                                   data: { confirm: "Are you sure you want to delete user?" } %>
    <% end %>
  </li>
  <% end %>
</ul>

<%= will_paginate %>