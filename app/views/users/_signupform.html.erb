

    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "First and last name." %>
        
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", placeholder: "Enter a valid email address." %>
        
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", placeholder: "Must be atleast 6 characters long." %>
  
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      
        <%= f.submit "Sign-up",:data => {:disable_with => "Creating User..."},  class: "btn btn-full" %>
    <% end %>
 
