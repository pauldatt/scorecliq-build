<% if logged_in? %>
  <header class="navigation navbar navbar-fixed-top navbar navbar-default nav-tabs master-header">
    <div class="container">
      <%= link_to "scorecliq", home_path, id:"logo" %>
          <ul class="navigation nav navbar-nav navbar-right nav-tabs">
            <li><%= link_to "Home", home_path %> </li>
            <li><%= link_to " Profile", current_user %></li>
            <li><%= link_to "Search", search_path %></li>
            <li><%= link_to 'Your Conversations', conversations_path %></li>
            <li class="dropdown">
             <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b> </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log-out", logout_path, method: 'delete' %>
              </li>
            </ul>
          </ul>
    </div>
  </header>
<% else %>
  <header class="navigation navbar navbar-fixed-top navbar navbar-default nav-tabs ">
    <div class="container">
      <%= link_to "scorecliq", root_path, id:"logo" %>
          <ul class="navigation nav navbar-nav navbar-right nav-tabs">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Sign-Up", signup_path  %></li>
          </ul>
      </div>
  </header>
<% end %>
         

           
              
              
      