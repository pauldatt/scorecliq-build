          <ul class="nav nav-pills nav-stacked">
            <li class="active"> 
              <%= link_to( home_path) do %>
               Dashboard <span class="sr-only">(current)</span>
              <% end %>
            </li>
            <li><%= link_to "My Scoreboards", scoreboards_path %></li>
            <li><%= link_to "Search", search_path %></li>
          </ul>
        <% end %>
          
          <% if @selected %>
